{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "../dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "config",
    "setupTests.ts",
    "componentDemos/*",
    "docs/*",
    "components/**/__tests__/*"
  ]
}
